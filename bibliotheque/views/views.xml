<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="book_form_view">
      <field name="name">Book Form</field>
      <field name="model">bibliotheque.book</field>
      <field name="arch" type="xml">
        <form string="Book">
          <header>
            <button string = "CHECK ISBN" type ="object" name = "button_check_isbn"/>
          </header>
            <sheet>
              <group name="group_top">
                <group name="group_left">
                  <field name="name"/>
                  <field name="author_ids" widget="many2many_tags" />
                  <field name="publisher_id" />
                  <field name="date_published"/>
                  <field name="notes"/>
                  <field name="descr"/>
                  <field name="copies"/>
                  <field name="avg_rating"/>
                  <field name="currency_id"/>
                </group>
                  <group name="group_right">
                    <field name="isbn"/>
                    <field name="book_type"/>
                    <field name="active"/>
                    <field name="last_borrow_date"/>
                    <field name="price"/>
                    <field name="image" widget="image" />
                  </group>
              </group>
            </sheet>
        </form>
      </field>
    </record>

    <!--<separator string="NOTEBOOK"/>
    <notebook>
    <page string="Authors">
      <field name ="author_ids"/>
    </page>
    <page string="Publishers">
      <field name ="publisher_id"/>
    </page>
    </notebook> -->
       
      
    
    <record model="ir.ui.view" id="book_tree_view">
      <field name="name">Book List</field>
      <field name="model">bibliotheque.book</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="isbn"/>
          <field name="author_ids" widget="many2many_tags" />
          <field name="publisher_id" />
          <field name="active"/>
          <field name="book_type"/>
          <field name="notes"/>
          <field name="descr"/>
          <field name="copies"/>
          <field name="avg_rating"/>
          <field name="currency_id"/>
          <field name="last_borrow_date"/>
          <field name="price"/>
        </tree>
      </field>
    </record>
    <record model="ir.ui.view" id="book_search_view">
      <field name="name">Book Filters</field>
      <field name="model">bibliotheque.book</field>
      <field name="arch" type="xml">
        <search>
          <field name="publisher_id"/>
          <filter name="filter_inactive" string="Inactive" domain="[('active','=',True)]"/>
          <filter name="filter_active" string="Active" domain="[('active','=',False)]"/>
        </search>
      </field>
    </record>

    
    

    <!-- actions opening views on models -->
   
    <record model="ir.actions.act_window" id="book_action_window">
      <field name="name">Library Books</field>
      <field name="res_model">bibliotheque.book</field>
      <field name="view_mode">tree,form</field>
    </record>
    

